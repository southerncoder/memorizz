# MemoRizz Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# OpenAI API Configuration (Required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Oracle Database Configuration
# Admin credentials (for setup only)
ORACLE_ADMIN_USER=system
ORACLE_ADMIN_PASSWORD=MyPassword123!

# MemoRizz database user credentials
ORACLE_USER=memorizz_user
ORACLE_PASSWORD=SecurePass123!
ORACLE_DSN=localhost:1521/FREEPDB1

# Optional: Backend selection (oracle, mongodb)
MEMORIZZ_BACKEND=oracle

# Optional: Schema name (defaults to username)
MEMORIZZ_SCHEMA=MEMORIZZ_USER

# Optional: Docker platform flag for Apple Silicon
# Uncomment and set if you're on Apple Silicon (M1/M2/M3)
# PLATFORM_FLAG=--platform linux/amd64
